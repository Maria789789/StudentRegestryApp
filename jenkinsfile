pipeline {
    agent any

    environment{
        NODE_VERSION = '22.X'
    }

    tools {
        node.js "${NODE_VERSION}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install dependecies') {
            steps{
                script{
                    if(isUnix()){
                        sh 'npm install'
                    }
                    else{
                        sh 'npm install'
                    }
                }
            }
        }

        stage('Start application and run tests') {
            steps {
                script{
                    sh 'npm start &'
                    sh 'wait-on http://localhost:8090'
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always{
            acho 'CI pipeline completed'
        }
    }
}